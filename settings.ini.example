[Confluence]
# Confluence Data Center URL
url = https://confluence.yourcompany.com
# Service account or user credentials
username = your_username
password = your_password
# Optional: Specific spaces to extract (comma-separated)
# Leave empty to extract ALL spaces
spaces =

[Local]
# Directory to store extracted content
content_directory = ./data/content
# Database file path
database_path = ./data/diagrams.db
# Whoosh index directory
index_directory = ./data/whoosh_index
# Applications file for "Browse by Application" feature (one app name per line)
# Copy applications.txt.example to applications.txt and customize for your environment
applications_file = ./applications.txt

[Browser]
# Web server host (0.0.0.0 for all interfaces)
host = 0.0.0.0
# Web server port
port = 5000
# Debug mode (disable in production)
debug = false
# Show download/edit buttons (set to false for non-DrawIO content like Lucidchart)
show_edit_buttons = true

[Extractor]
# Rate limit: requests per second
rate_limit = 5
# Batch size for API calls
batch_size = 50
# Skip spaces starting with ~ (personal spaces)
skip_personal_spaces = true
